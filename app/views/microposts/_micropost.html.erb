<li id="micropost-<%= micropost.id%>">
  <%= link_to image_tag(micropost.user.icon, size: 50), micropost.user, class: "mini_icon" %>
  <span class="user"><%= link_to micropost.user.name, micropost.user%></span>
  <span class="content"><%= micropost.content %></span>
    <% if !micropost.buckets.blank? %>
      <% micropost.buckets.each do |bucket|%>
        <% if bucket.picture%>
        <div class="home_page_image">
           <%= image_tag bucket.picture, size: '150x150'  %>
        </div>
        <% end %>
      <% end %>
    <% end %>
  <div class="post_info row align-items-center">
    <div class="timestamp col-xs-12 col-md-7">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      <% if current_user?(micropost.user)%>
        <%= link_to 'delete', micropost_path(micropost), method: :delete, data: {confirm: "You sure?"}%>
      <% end %>
    </div>
    <div class="col-xs-6 col-md-3">
      <span>comments</span>
    </div>
    <div class="col-xs-6 col-md-2">
      <span>vote</span>
    </div>
  </div>
</li>
