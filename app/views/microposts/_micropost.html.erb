<li id="micropost-<%= micropost.id%>">
  <%= link_to image_tag(micropost.user.icon, size: 50), micropost.user, class: "mini_icon" %>
  <span class="user"><%= link_to micropost.user.name, micropost.user%></span>
  <span class="content"><%= micropost.content %></span>
  <% if !micropost.buckets.blank? %>
      <% micropost.buckets.each do |bucket|%>
        <% if bucket.picture%>
          <div class="home_page_image">
             <%= image_tag bucket.picture, size: '150x150', id: "image-#{bucket.id}"   %>
          </div>
        <% end %>
      <% end %>
  <% end %>

  <div class="post_info row">
    <div class="timestamp col-xs-12 col-md-7">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user)%>
        <%= link_to 'delete', micropost_path(micropost), method: :delete, data: {confirm: "You sure?"}%>
    <% end %>
    </div>

    <div class="col-xs-6 col-md-3">
      <span><%= micropost.comments.count %> </span>
      <i class="material-icons post_comments" id="post-comments-<%= micropost.id%>">comment</i>
    </div>

    <div class="col-xs-6 col-md-2">
    <span>
      <% if current_user %>
        <%= link_to micropost.likes.count, like_post_user_path(micropost), method: :post %>
      <% else %>
          <%= micropost.likes.count %>
      <% end %>
      <i class="material-icons" id="post_likes">thumb_up</i>
    </span>
    </div>
  </div>

  <% if !micropost.comments.empty? %>
    <div class="row comments_body">
      <ul id="comments-<%= micropost.id%>">
          <% micropost.comments.last(5).each do |comment|%>
            <li><span><%= link_to comment.user.name, comment.user %>: </span><%= comment.message.truncate(40)%></li>
          <% end %>
      </ul>
      <%= form_for :comment, url: comments_path(micropost), method: :post do |f|%>
        <%= f.text_area :message, class: "form-control"%>
        <%= f.submit "Submit", class: "btn btn-small btn-default"%>
      <% end %>
    </div>
  <% end %>

</li>


<script>
$(".post_info").click(function(event) {
  $(this).next().toggleClass('active');
});
</script>
