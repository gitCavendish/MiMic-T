<div class="row">
  <%= render 'static_pages/logged_in_scope'%>
  <%= render 'shared/feed'%>
  <div>
      <% if !current_user %>
        <%= link_to "Sign Up Now!", signup_path, class: "btn btn-lg btn-primary"%>
        <%= link_to "Login as a sample user to explore more...", fake_login_path, method: :post,class: "btn btn-lg btn-danger"%>
      <% elsif current_user && (current_user.microposts.size < 3)  %>
        <h1>Welcome to MiMiC-T</h1>
        <p>Try post some microposts or photos.Enjoy yourself!</p>
      <% elsif current_user && current_user.admin? %>
        <h4>Hello administor.</h4>
      <% end %>
  </div>

</div>
