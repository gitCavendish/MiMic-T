<% provide(:title, @user.name)%>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <%= image_tag @user.icon, size: "150x150" %>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats'%>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>

      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
